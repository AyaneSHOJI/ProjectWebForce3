<!DOCTYPE html>

<html>

<head>

    <meta charset="UTF-8">
    <title> {% block title %} Fantasclic {% endblock %} </title>

    {% block stylesheets %}
    <link rel="stylesheet" type="text/css" href={{ asset('css/bootstrap.css') }} />
    <link rel="stylesheet" type="text/css" href={{ asset('css/style.css') }} />
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    {% endblock %}

    {% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"> </script>
    <script type="application/javascript" src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"> </script>
    <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>
    {% endblock %}

</head>


<body class="bg-secondary">


    <div class="container-fluid">

        <div class="row">

            <div class="col-sm-2">
                <img class="w-75 h-100" src={{ asset('img/logoProjet.jpg') }} alt="">
            </div>

            <div class="col-sm-10"
                style="background-image: url('img/banniereProjetCopie.jpg'); background-size: cover; opacity:0.7">
            </div>

            <div class="container-fluid p-0">
                <nav class="nav bg-secondary d-flex justify-content-around py-3">
                    <a class="nav-link text-warning" href={{ path('list_film') }}> FILMS </a>
                    <a class="nav-link text-warning" href={{ path('list_realisateur') }}> RÉALISATEURS </a>
                    <a class="nav-link text-warning" href={{ path('list_genre') }}> GENRES </a>
                    <a class="nav-link text-warning" href="#"> BIENTÔT À L'AFFICHE </a>
                    <a class="nav-link text-warning" href="#"> TOP DE LA RÉDAC'</a>

                    {% if is_granted("ROLE_USER") %}
                    <a class="nav-link text-warning" href={{ path('app_logout') }}>SE DECONNECTER</a>
                    <a class="nav-link text-warning" href={{ path('detail_utilisateur') }}>ESPACE
                        PERSONNEL</a>
                    {% else %}
                    <a class="nav-link text-warning" href={{ path('app_login') }}>CONNEXION</a>
                    {% endif %}
                    {% if is_granted("ROLE_ADMIN") %}
                    <a href={{ path('register_admin')}} class="nav-link">Nouveau compte admin</a>
                    {% endif %} </a>
                </nav>
            </div>
        </div>
        {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) en tant que {{ app.user.username }}
        </div>
        {% endif %}
        <div class="container d-flex justify-content-center mt-5">

            <a href="#"> <img class="m-3 rounded-lg" src={{ asset('img/Jaws.jpg') }} alt=""> </a>
            <a href="#"> <img class="m-3 rounded-lg" src={{ asset('img/heredite.jpg') }} alt=""> </a>
            <a href="#"> <img class="m-3 rounded-lg" src={{ asset('img/Shining.jpg') }} alt=""> </a>
            <a href="#"> <img class="m-3 rounded-lg" src={{ asset('img/Scream.jpg') }} alt=""> </a>
        </div>

    </div>

    {% block body %}
    {% endblock %}
</body>

</html>